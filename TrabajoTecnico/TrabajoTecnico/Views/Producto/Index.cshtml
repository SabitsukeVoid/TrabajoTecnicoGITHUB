@model IEnumerable<TrabajoTecnico.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="col-auto p-5 text-center">
        <h1 class="text-white">CATALOGO DE PRODUCTOS</h1>
    </div>
    <br>
    <div class="container text-center">
        <h3 class="text-white">Crear producto</h3>
    </div>
    <br>


    <div class="container bg-dark p-5 rounded">
        <div class="row">
            <div class="container ">
                <div class="row align-items-center">
                    <div class="col">
                        <button type="button" id="create" class="btn btn-success p-2 m-2 rounded-lg ">
                            <a asp-action="Create"><img src="~/img/add.png" alt="" width="30px">Crear</a>
                        </button>
                    </div>
                    <div class="col">
                    </div>
                </div>
            </div>
            <div class="container text-center pt-5">
                <h2 class="text-white">LISTA DE PRODUCTOS</h2>
            </div>
            <table class="table table-borderer table-hover" id="listaProductos">
                <thead>
                    <tr>
                        <th>
                            <p class="text-white">@Html.DisplayNameFor(model => model.Nombre)</p>
                        </th>
                        <th>
                            <p class="text-white">@Html.DisplayNameFor(model => model.Descripcion)</p>
                        </th>
                        <th>
                            <p class="text-white">@Html.DisplayNameFor(model => model.Precio)</p>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-items-center">
                            <td>
                                <p class="text-white">@Html.DisplayFor(modelItem => item.Nombre)</p>
                            </td>
                            <td>
                                <p class="text-white">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                            </td>
                            <td>
                                <p class="text-white">@Html.DisplayFor(modelItem => item.Precio)</p>
                            </td>
                            <td>
                                <button type="button" id="edit" class="btn btn-primary p-2 m-2 rounded-lg">
                                    <img src="~/img/edit.png" alt="" width="30px"><a asp-action="Edit" asp-route-id="@item.IdProducto">Editar</a>
                                </button>
                                <button type="button" id="update" class="btn btn-info p-2 m-2 rounded-lg">
                                    <img src="~/img/view.png" alt="" width="30px"><a asp-action="Details" asp-route-id="@item.IdProducto">Mostrar</a>
                                </button>
                                <button type="button" id="delete" class="btn btn-danger p-2 m-1 rounded-lg">
                                    <img src="~/img/delete.png" alt="" width="30px"><a asp-action="Delete" asp-route-id="@item.IdProducto">Borrar</a>
                                </button>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<p>
    
</p>
<table class="table">
    
</table>
