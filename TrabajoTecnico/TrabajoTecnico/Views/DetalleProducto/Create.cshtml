@model TrabajoTecnico.Models.DetalleProducto

@{
    ViewData["Title"] = "Create";
}

<div class="content">
    <br />
    <br />
    <div class="container bg-dark p-4 rounded-2 text-white">
        <h1>Crear</h1>

        <h4>DetalleProducto</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdDetalleProducto" class="control-label"></label>
                        <input asp-for="IdDetalleProducto" class="form-control" />
                        <span asp-validation-for="IdDetalleProducto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdProducto" class="control-label"></label>
                        <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ValorTotal" class="control-label"></label>
                        <input asp-for="ValorTotal" class="form-control" />
                        <span asp-validation-for="ValorTotal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ValorIva" class="control-label"></label>
                        <input asp-for="ValorIva" class="form-control" />
                        <span asp-validation-for="ValorIva" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-success rounded-2 m-2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-primary rounded-2 m-2">Regresar</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
