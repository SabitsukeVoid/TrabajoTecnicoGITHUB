@model TrabajoTecnico.Models.DetalleProducto

@{
    ViewData["Title"] = "Delete";
}
<div class="content">
    <br />
    <br />
    <div class="container bg-dark p-4 rounded-2 text-white">
        <h1>Borrar</h1>

        <h3>Estas seguro de borrar este campo?</h3>
        <div>
            <h4>DetalleProducto</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cantidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cantidad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ValorTotal)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ValorIva)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ValorIva)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdProductoNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdProductoNavigation.IdProducto)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdDetalleProducto" />
                <input type="submit" value="Borrar" class="btn btn-danger rounded-2 m-2" /> |
                <a asp-action="Index" class="btn btn-primary rounded-2 m-2">Regresar</a>
            </form>
        </div>
    </div>
</div>

